<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.silentwolfstudios.startup.MainActivity"
    android:background="@color/green"
    android:id="@+id/mConstraint"
    >

    <TextView

        android:id="@+id/tvDidYouKnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"

        android:text="Did you know?"
        android:textSize="40sp"
        android:textColor="@color/white"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView

        android:id="@+id/tvFactDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Ostrict can run really fast"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="35dp"
        android:paddingRight="30dp"

        />

    <Button
        android:id="@+id/btnFunFact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        android:text="Show another fun fact"
        android:background="@color/white"
        android:paddingTop="15dp"
        android:paddingBottom="35dp"

        app:layout_constraintVertical_bias="0.744" />
</android.support.constraint.ConstraintLayout>

